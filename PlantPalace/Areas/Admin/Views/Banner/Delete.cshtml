@model Banner
@{
}
<form asp-action="Delete" asp-controller="Banner">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Banner
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" hidden />
        <div class="row p-1 mb-3">
            <img src="@Model.IsBanned" alt="@Model.BannerName" />
        </div>
        <div class="row p-1 mb-3">
            <label asp-for="BannerName" class="p-0"></label>
            <input asp-for="BannerName" class="form-control" disabled />
        </div>
        
        <div class="row ">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" asp-controller="Banner" class="btn btn-secondary border form-control">Back TO List</a>
            </div>
        </div>
    </div>
</form>