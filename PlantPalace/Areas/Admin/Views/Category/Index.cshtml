@model List<Category>
@{
}

<partial name="_Notification" />

<div class="">
    <div class="row pt-4 pb-3">
        <div class="col-6 ">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <h2 class="text-primary">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary custum-controll-w">
                    <i class="bi bi-plus-circle-fill"></i>
                    <span class="text-nowrap ">Add New Category</span>
                </a>

            </h2>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped  table-sm">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Orders
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>

                        <td>
                            @category.DisplayOrder
                        </td>

                        <td>
                            <div class=" d-flex justify-content-center flex-column flex-lg-row align-item-center" role="group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-primary rounded me-1 text-nowrap">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger rounded ms-1 text-nowrap">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    

</div>