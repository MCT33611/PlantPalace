                                            <tr>
                                                <th scope="row"><a href="#"><img src="@product.ImageUrl" alt=""></a></th>
                                                <td><a href="#" class="text-primary fw-bold">@product.Name</a></td>
                                                <td>₹@product.Price</td>
                                                <td class="fw-bold">@Model.ordersDetail.Count(od => od.ProductId == product.Id)</td>
                                                <td>₹@(product.Price * Model.ordersDetail.Count(od => od.ProductId == product.Id))</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div><!-- End Top Selling -->

                </div>
